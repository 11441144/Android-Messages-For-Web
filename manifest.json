{
  "manifest_version": 2,
  "name": "Android Messages For Web",
  "description": "Unofficial Chrome app created to make it easier for ChromeOS users to access Android messages.",
  "version": "2.0",
  "minimum_chrome_version": "37.0.0.0",
  "icons": {
    "256": "img\/256.png",
    "128": "img\/128.png",
    "96": "img\/96.png",
    "64": "img\/64.png",
    "48": "img\/48.png",
    "32": "img\/32.png",
    "16": "img\/16.png"
  },
  "app": {
    "background": {
      "scripts": [
        "js\/background.js"
      ],
      "pages": [
        "html\/embed.html"
      ]
    }
  },
  "permissions": [
    "webview",
    "notifications",
    "storage",
    "browser"
  ]
}